<div id="story_div">
      <% if @story.question %>
          <% @story.question.choices.each do |x,y|%>
            <%=form_tag "/games/update_by_id", method: "post" do%>
              <input type="hidden" name="next_id" value="<%=y['next_story_id']%>">
              <input type="hidden" name="question_id" value="<%=@story.question.id%>">
              <input type="hidden" name="my_ans" value="<%=x%>">
              <p>   <button class="btn btn-defalut" href="#"><%= y['contnt']%></button></p>
            <% end %>
          <% end %>
      <% end %>
    
    
    <%=form_tag "/games/update", method: "post" do%>
            
        <p>   <%= @story.speaker %> : <%= @story.content %></p>
        
        <br>
        <% if !@story.question %>
          <p><button class="btn btn-lg btn-success" href="#" role="button">다음</button></p>
        <% end %>
        
    <% end %>
    
    <%= @a %>
    
</div>